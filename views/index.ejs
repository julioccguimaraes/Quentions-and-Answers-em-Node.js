<%- include("partials/header.ejs") %>
<body>
    <%- include("partials/navbar.ejs") %>
    <div class="container">
        <hr />
        <h1>Perguntas</h1>
        <hr />
        <a href="/question" class="btn btn-primary">Perguntar</a>
        <hr />
        <% questions.forEach(question => { %>
            <br />
            <div class="card">
                <div class="card-body">
                    <h3><%= question.title %></h3>
                </div>
                <div class="card-footer">
                    <a href="/question/<%= question.id %>" class="btn btn-primary">Responder</a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include("partials/footer.ejs") %>